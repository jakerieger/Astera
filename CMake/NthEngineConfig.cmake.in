@PACKAGE_INIT@

# Compute paths
get_filename_component(NTHENGINE_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

# Define variables for install paths
set(NTHENGINE_INCLUDE_DIRS "@PACKAGE_NTHENGINE_INSTALL_INCLUDEDIR@")
set(NTHENGINE_LIBRARY_DIRS "@PACKAGE_NTHENGINE_INSTALL_LIBDIR@")
set(NTHENGINE_DATA_DIR "@PACKAGE_NTHENGINE_INSTALL_DATADIR@")

# Check whether user requested COMPONENTS
set(_NTHENGINE_SUPPORTED_COMPONENTS Runtime Development Tools)

foreach(_comp ${NthEngine_FIND_COMPONENTS})
    if (NOT _comp IN_LIST _NTHENGINE_SUPPORTED_COMPONENTS)
        set(NthEngine_FOUND False)
        set(NthEngine_NOT_FOUND_MESSAGE "Unsupported component: ${_comp}")
    endif()
endforeach()

# Find dependencies (these should match what's in FetchDeps.cmake)
# Note: In a real distribution, you'd want to find installed versions
include(CMakeFindDependencyMacro)

# Uncomment these if you want to require system-installed dependencies
# find_dependency(glfw3 REQUIRED)
# find_dependency(glm REQUIRED)
# find_dependency(spdlog REQUIRED)
# find_dependency(EnTT REQUIRED)
# find_dependency(fmt REQUIRED)

# Include the targets file
include("${CMAKE_CURRENT_LIST_DIR}/NthEngineTargets.cmake")

# Define imported target aliases for convenience
if(NOT TARGET NthEngine::NthEngine)
    add_library(NthEngine::NthEngine ALIAS NthEngine)
endif()

# Set found flag
set(NthEngine_FOUND TRUE)

check_required_components(NthEngine)
