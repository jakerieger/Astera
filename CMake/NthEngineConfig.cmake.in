@PACKAGE_INIT@

# NthEngine CMake Configuration File
# This file is used by find_package(NthEngine) to import targets

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(fmt REQUIRED)
find_dependency(pugixml REQUIRED)
find_dependency(spdlog REQUIRED)
find_dependency(CLI11 REQUIRED)
find_dependency(PkgConfig REQUIRED)

pkg_check_modules(LUAJIT REQUIRED luajit)
pkg_check_modules(GLFW REQUIRED glfw3)

# Define the EngineContent path for users of the package
set(NTHENGINE_CONTENT_DIR "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_DATADIR@/NthEngine/EngineContent")
set(NTHENGINE_INCLUDE_DIR "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_INCLUDEDIR@/NthEngine")

# Include the exported targets
include("${CMAKE_CURRENT_LIST_DIR}/NthEngineTargets.cmake")

# Provide information about available components
set(NthEngine_FOUND TRUE)
set(NthEngine_VERSION @PROJECT_VERSION@)

# Check which components are available
check_required_components(NthEngine)

# Print usage information
if(NOT NthEngine_FIND_QUIETLY)
    message(STATUS "Found NthEngine: ${NthEngine_VERSION}")
    message(STATUS "  Include directory: ${NTHENGINE_INCLUDE_DIR}")
    message(STATUS "  Engine content: ${NTHENGINE_CONTENT_DIR}")
    message(STATUS "  Available targets:")
    message(STATUS "    - NthEngine::Shared    (shared library)")
    message(STATUS "    - NthEngine::Static    (static library)")
    message(STATUS "    - NthEngine::NthEngine (shared library)")
endif()